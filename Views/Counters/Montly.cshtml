@model IEnumerable<Printercounter.Models.Counter>

@{
    ViewData["Title"] = "Montly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Montly</h1>

<div>
    <h4>Counter</h4>
    <hr />



    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.FirstOrDefault().Printer.PrinterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstOrDefault().Printer.PrinterModel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.FirstOrDefault().Printer.PrinterBarcode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstOrDefault().Printer.PrinterIP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.FirstOrDefault().Printer.PrinterSN)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.FirstOrDefault().Printer.PrinterLocation)
        </dt>

    </dl>

</div>
<div>

    <a asp-action="Index">Back to List</a><br />

    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="1">Január</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="2">Február</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="3">Március</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="4">Április</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="5">Május</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="6">Junius</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="7">Július</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="8">Augusztus</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="9">Szeptember</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="10">Oktober</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="11">November</a>
    <a asp-controller="Counters" asp-action="Montly" asp-route-year="2019" asp-route-month="12">December</a>

</div>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Date_Counter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaperCounter)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DailyPaperConsumption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TonerLevel)
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Date_Counter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaperCounter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DailyPaperConsumption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TonerLevel)
                </td>

            </tr>
        }
    </tbody>
</table>
